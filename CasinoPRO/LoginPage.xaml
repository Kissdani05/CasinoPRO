<Window x:Class="CasinoPRO.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="LoginPage"
      >
    <Grid Margin="20" Background="DimGray">
        <Grid Margin="20">
            <TextBlock Text="LOGO" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Top" 
           Foreground="Black" 
           FontSize="16" 
           Margin="0,10,0,0"/>

            <!-- Felhasználónév vagy email cím -->
            <TextBlock Text="Felhasználónév vagy e-mail cím" 
           HorizontalAlignment="Left" 
           VerticalAlignment="Top" 
           Margin="0,50,0,0" 
           Foreground="White"/>
            <TextBox x:Name="UsernameTextBox" 
         HorizontalAlignment="Stretch" 
         VerticalAlignment="Top" 
         Height="30" 
         Margin="0,75,0,0" 
         Background="#34495E" 
         Foreground="White" 
         BorderBrush="#34495E" 
         Padding="10" 
         FontSize="14" />

            <!-- Jelszó mező -->
            <PasswordBox x:Name="PasswordTextBox" 
                 HorizontalAlignment="Stretch" 
                 VerticalAlignment="Top" 
                 Height="30" 
                 Margin="0,145,0,0" 
                 Background="#34495E" 
                 Foreground="White" 
                 BorderBrush="#34495E" 
                 Padding="10" 
                 FontSize="14"/>

            <TextBlock Text="Jelszó" 
HorizontalAlignment="Left" 
VerticalAlignment="Top" 
Margin="0,120,0,0" 
Foreground="LightGray" />

            <!-- Elfelejtett jelszó -->
            <TextBlock HorizontalAlignment="Left" 
           VerticalAlignment="Top" 
           Margin="0,190,0,0" 
           Foreground="DarkGray">
    <Hyperlink x:Name="ForgotPasswordLink" Click="ForgotPassword_Click">Elfelejtettem a jelszavam</Hyperlink>
            </TextBlock>

            <!-- Bejelentkezés gomb -->
            <Button x:Name="ActionButton" 
        Content="BEJELENTKEZÉS" 
        HorizontalAlignment="Stretch" 
        VerticalAlignment="Top" 
        Height="40" 
        Margin="0,230,0,0" 
        Background="#BDC3C7" 
        Foreground="#2C3E50" 
        FontSize="14" 
        BorderBrush="#BDC3C7" 
        Click="ActionButton_Click"/>

            <!-- Regisztráció link -->
            <TextBlock HorizontalAlignment="Center" 
           VerticalAlignment="Top" 
           Margin="0,290,0,0" 
           Foreground="LightGray">
    Még nincs CASINOPRO fiókod? 
    <Hyperlink x:Name="RegisterLink" Click="RegisterLink_Click" Foreground="Orange">Regisztrálj!</Hyperlink>
            </TextBlock>

            <!-- Bezárás gomb (jobb felső sarokban) -->
            <Button Content="X" 
        HorizontalAlignment="Right" 
        VerticalAlignment="Top" 
        Background="Transparent" 
        Foreground="White" 
        BorderBrush="Transparent" 
        FontSize="16" 
        Width="30" 
        Height="30" 
        Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</Window>
