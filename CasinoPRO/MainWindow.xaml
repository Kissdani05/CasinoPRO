<Window x:Class="CasinoPRO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasinoPRO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Frame az oldalak közötti navigációhoz -->
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" />

        <!-- Felső sáv -->
        <DockPanel LastChildFill="True" Height="50" VerticalAlignment="Top" Background="LightGray">
            <!-- Bejelentkezés gomb -->
            <Button Content="Bejelentkezés" DockPanel.Dock="Left" Width="100" Margin="10,0" VerticalAlignment="Center" x:Name="LoginButton" Click="LoginButton_Click"/>

            <!-- Felhasználói ikon, alapból rejtve -->
            <Button Content="👤" DockPanel.Dock="Left" Width="50" Margin="10,0" VerticalAlignment="Center" x:Name="UserIcon" Click="UserIcon_Click" Visibility="Collapsed"/>

            <!-- Logó -->
            <Label Content="LOGO" DockPanel.Dock="Left" Width="100" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>

            <!-- Balance -->
            <Label Content="Balance: " DockPanel.Dock="Left" VerticalAlignment="Center" FontSize="14" Margin="20,0,5,0"/>
            <TextBlock Text="10000 HUF" DockPanel.Dock="Left" VerticalAlignment="Center" FontSize="14" Margin="0,0,20,0"/>

            <!-- Befizetés gomb -->
            <Button Content="Befizetés" DockPanel.Dock="Right" Width="100" Margin="10,0" VerticalAlignment="Center"/>
        </DockPanel>

        <!-- Oldalsáv, alapból rejtve -->
        <StackPanel Name="UserSidebar" Background="LightGray" Width="200" HorizontalAlignment="Left" Visibility="Collapsed" Panel.ZIndex="1">
            <Button Content="Eddigi fogadásaim" Margin="10" Click="EddigiFogadasaim_Click"/>
            <Button Content="Adataim" Margin="10" />
            <Button Content="Befizetés" Margin="10" />
            <Button Content="Kifizetés" Margin="10" />
            <Button Content="Kijelentkezés" Margin="10" Click="LogoutButton_Click"/>
        </StackPanel>

        <!-- Sportok gombok sáv -->
        <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Top" Margin="0,50,0,0" Background="DarkGray">
            <!-- Sport gombok -->
            <Button Content="Foci" Width="100" Margin="10,0" VerticalAlignment="Center"/>
            <Button Content="Kosárlabda" Width="100" Margin="10,0" VerticalAlignment="Center"/>
            <Button Content="Tenisz" Width="100" Margin="10,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Tartalom - 2 részre osztva -->
        <Grid Margin="0,100,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Bal oldal: Fogadási lehetőségek -->
            <StackPanel Grid.Column="0" Margin="20">
                <TextBlock Text="Fogadási lehetőségek" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Foci mérkőzés fogadási opciók -->
                <TextBlock Text="Foci: Real Madrid vs Barcelona" FontSize="16" Margin="0,10,0,10"/>
                <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Top" Margin="0,50,0,0" Background="DarkGray">
                    <Button Content="Hazai" Width="100" Margin="10,0" VerticalAlignment="Center" Click="BetOption_Click"/>
                    <Button Content="Döntetlen" Width="100" Margin="10,0" VerticalAlignment="Center" Click="BetOption_Click"/>
                    <Button Content="Vendég" Width="100" Margin="10,0" VerticalAlignment="Center" Click="BetOption_Click"/>
                </StackPanel>
                
            </StackPanel>

            <!-- Jobb oldal: Élő fogadási lehetőségek -->
            <StackPanel Grid.Column="1" Margin="20">
                <TextBlock Text="Élő legjobb fogadási lehetőségek" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Fogadási opciók: Admin felület által szerkeszthető" FontSize="14" Margin="0,10,0,10"/>
            </StackPanel>
        </Grid>
        <StackPanel Name="BetCart" Background="LightGray" Width="200" Height="150" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Visibility="Collapsed">
            <TextBlock Name="SelectedBetText" Text="Választott fogadás:" FontWeight="Bold" Margin="10"/>
            <TextBox Name="BetAmount" Width="100" Height="25" Margin="10" PreviewTextInput="BetAmount_PreviewTextInput"/>
            <Button Content="Fogadás véglegesítése" Width="150" Margin="10" Click="FinalizeBet_Click"/>
        </StackPanel>
    </Grid>
</Window>
